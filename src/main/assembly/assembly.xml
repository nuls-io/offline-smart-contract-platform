<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <!-- must have id, but in pom.xml file can set zip file without id: appendAssemblyId=false -->
    <id>nuls</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <!-- the zip file with self directory,default:true -->
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <!-- without project jar self -->
            <useProjectArtifact>true</useProjectArtifact>
            <!-- automatic without test jar, can set <scope>compile</scope> to control -->
            <outputDirectory>/libs</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/conf</outputDirectory>
            <directoryMode>0744</directoryMode>
            <fileMode>0644</fileMode>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/script</directory>
            <outputDirectory>/bin</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${user.home}/Nuls/JRE_ENV/LINUX/V8/JAVA/JRE/1.8.0_171</directory>
            <outputDirectory>/jre</outputDirectory>
            <excludes>
                <exclude>**/.DS_Store</exclude>
            </excludes>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>


    </files>
</assembly>